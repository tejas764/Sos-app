<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logIn">
    <ImageView
        android:id="@+id/imageVew7"
        android:layout_width="135dp"
        android:layout_height="129dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="586dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_mipmap" />

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="487dp"

        android:layout_marginBottom="98dp"
        android:background="#6F6E06"
        app:cardBackgroundColor="#C4EBE7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageVew7"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/imageVew7"
        app:layout_constraintTop_toBottomOf="@+id/imageVew7" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDEFC0">

            <TextView
                android:id="@+id/textiew12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="131dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="155dp"
                android:fontFamily="@font/abril_fatface"
                android:text="Log in"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="136dp"
                android:layout_marginEnd="17dp"
                android:fontFamily="@font/aoboshi_one"
                android:text="@string/name"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/editTextext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="text"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="@+id/mail"
                app:layout_constraintStart_toStartOf="@+id/mail"
                app:layout_constraintTop_toBottomOf="@+id/textiew12" />

            <TextView
                android:id="@+id/textiew14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="34dp"

                android:layout_marginEnd="21dp"
                android:fontFamily="@font/aoboshi_one"
                android:text="@string/email"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="47dp"
                android:ems="10"
                android:hint="xyz@gmail.com"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="@+id/Email2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Email2"
                app:layout_constraintTop_toBottomOf="@+id/editTextext" />

            <TextView
                android:id="@+id/textVie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"

                android:layout_marginTop="40dp"
                android:layout_marginEnd="31dp"
                android:fontFamily="@font/aoboshi_one"
                android:text="Pass:"
                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@+id/mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textiew14" />

            <EditText
                android:id="@+id/Email2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="43dp"
                android:ems="10"
                android:hint="Set password"
                android:inputType="textPassword"
                app:layout_constraintBottom_toTopOf="@+id/button6"
                app:layout_constraintEnd_toEndOf="@+id/textiew12"
                app:layout_constraintStart_toStartOf="@+id/textiew12" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="90dp"
                android:background="@drawable/login"
                android:text="Join"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/Email2"
                app:layout_constraintStart_toStartOf="@+id/textiew14" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

  </androidx.constraintlayout.widget.ConstraintLayout>